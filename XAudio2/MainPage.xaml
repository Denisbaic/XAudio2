<Page
    x:Class="XAudio2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XAudio2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="errorText" HorizontalAlignment="Left" Margin="750,500,0,0" Text="errorText" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="pauseButton" Content="pause" HorizontalAlignment="Left" Margin="675,602,0,0" VerticalAlignment="Top"  Click="OnPauseButtonClick"/>
        <Button x:Name="submitButton" Content="submitButton" HorizontalAlignment="Left" Margin="603,489,0,0" VerticalAlignment="Top"  Click="OnSubmitButtonClick"/>
    </Grid>
</Page>
